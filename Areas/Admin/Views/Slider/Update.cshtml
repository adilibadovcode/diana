@model SliderUpdateVM
@{
    ViewData["Title"] = "Create";
}

<form class="container" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">Text</label>
        <input asp-for="Text" class="form-control">
        <span class="text-danger" asp-validation-for="Title"></span>

    </div>
    <div class="form-group">
        <label asp-for="ImageUrl">ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control">
        <span class="text-danger" asp-validation-for="ImageUrl"></span>

    </div>
    <div class="form-group">
        <label for="left">Left</label>
        <input asp-for="Position" value="-1" type="radio" id="left">
        <label for="middle">Middle</label>
        <input asp-for="Position" value="0" type="radio" id="middle">
        <label for="right">Right</label>
        <input asp-for="Position" value="1" type="radio" id="right">
        <br />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <button class="btn btn-outline-success">Submit</button>
</form>